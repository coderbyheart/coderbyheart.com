{
  "name": "coderbyheart.com",
  "description": "Source code for coderbyheart.com",
  "main": "index.html",
  "scripts": {
    "lint": "standard",
    "dev-server": "static ./build",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderbyheart/coderbyheart.com.git"
  },
  "keywords": [
    "homepage",
    "profile"
  ],
  "author": "Markus Tacker <m@coderbyheart.com>",
  "license": "UNLICENSED",
  "homepage": "https://github.com/coderbyheart/coderbyheart.com",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.5",
    "browserify": "^13.0.1",
    "browserify-shim": "^3.8.12",
    "font-awesome": "^4.6.3",
    "jquery": "^3.0.0",
    "material-design-icons": "^3.0.1",
    "node-sass": "^4.0.0",
    "tether": "^1.3.2",
    "uglifycss": "0.0.25",
    "uglifyjs": "^2.4.10"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "husky": "<2.0.0",
    "istanbul": "^0.4.3",
    "node-static": "^0.7.9",
    "standard": "^9.0.0",
    "validate-commit-msg": "^2.7.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ],
          "only": [
            "/assets/js/*.js"
          ]
        }
      ],
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.js",
    "tether": "./node_modules/tether/dist/js/tether.js",
    "bootstrap": "./node_modules/bootstrap/dist/js/bootstrap.js"
  },
  "browserify-shim": {
    "jquery": {
      "exports": "$"
    },
    "bootstrap": {
      "exports": "bootstrap",
      "depends": [
        "tether",
        "jquery"
      ]
    }
  }
}
